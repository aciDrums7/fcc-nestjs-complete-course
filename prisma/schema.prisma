generator client {
  provider = "prisma-client-js"
}

// generator class_validator {
//   provider = "prisma-class-validator-generator"
// }

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Song {
  id          Int      @id @default(autoincrement())
  title       String
  releaseDate DateTime
  duration    DateTime @db.Time
  lyrics      String?
  artist      Artist?  @relation(fields: [artistId], references: [id])
  artistId    Int?

  @@map("songs")
}

model Artist {
  id    Int    @id @default(autoincrement())
  name  String
  songs Song[]

  @@map("artists")
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  profile Profile?

  @@map("users")
}

model Profile {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
  photo  String
  phone  String

  @@map("profiles")
}
